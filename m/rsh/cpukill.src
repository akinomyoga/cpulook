#!/bin/bash

rsh_kill_submit(){
  local host="${1%:*}"
  local pid="${1#*:}"
  if test "$host:$pid" != "$1"; then
    echoe "the specified cpujob id '$1' is ill-formed."
    return 1
  fi

  local name="$host"
  local nice=0
  local cmd="$cpudir/m/rsh/rshkill.sh $pid"
  source "$cpudir/m/rsh/submit.src"
}

if test $# -eq 0; then
  echom "usage: cpukill HOST:PID"
  return
fi

while test $# -gt 0; do
  rsh_kill_submit "$1"
  shift
done
